<!DOCTYPE html>
<html lang="en">  
    <head>    
        <meta charset="utf-8">    
        <title>My Movie Catalog</title>    
        <meta name="viewport" content="width=device-width, initial-scale=1.0">    
        <meta name="description" content="">    
        <meta name="author" content="">    
        <!-- styles -->    
        <link href="./ressources/css/bootstrap.css" rel="stylesheet">
        <link href="./ressources/css/bootstrap-responsive.css" rel="stylesheet">
        <link href="./ressources/css/DT_bootstrap.css" rel="stylesheet">   
        <style>
          body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
          }
          .movieCoverCell {
            width : 140px;
          }
          .movieCoverPic {
            display : none;
          }
          .movieCoverPic img{
            width : 100px;
          }
          .movieTitle, .movieCountries, .download {
            display : inline;
            vertical-align: middle;
          }
          
          .movieActions {
            width : 80px;
            text-align : center;
          }
          
          .download {
            text-align: right;
            display: block;
            float: right;
          }
          .movieSummary{
            display : none;
            padding-top : 10px;
            color : #777777;
            text-align : justify;
          }
          .footer{
            text-align:center;
            font-size:10px;
            color:#999;
          }
          
          .dropdown-menu {
            min-width: 100px;
          }
          .dropdown-menu li {
            text-align: left;
          }
        </style>        
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->    
        <!--[if lt IE 9]>
              <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <script src="./ressources/js/jquery-1.7.2.min.js"></script>
        <script src="./ressources/js/dataTables.js"></script>
        <script src="./ressources/js/DT_bootstrap.js"></script>
        <script src="./ressources/js/bootstrap-dropdown.js"></script>
        <script>
            $(document).ready(function() 
                {
                    $("#hideButton").click(function ( event ) {
                        $(".movieCoverPic, .movieSummary").toggle();
                    });
                } 
            );
        </script> 
    </head>
    <body> 
        <div class="navbar navbar-fixed-top">
          <div class="navbar-inner">
            <div class="container">
              <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </a>
              <a class="brand" href="#">My Movie Catalog</a>
              <div class="pull-right">
                <ul class="nav">
                    <li><a id="hideButton" href="#" class="pull-right">Show/Hide details</a></li>
                </ul>              
              </div>
              <div class="nav-collapse">
                <ul class="nav">
                  <li><a href="#about">About</a></li>
                </ul>
              </div><!--/.nav-collapse -->
            </div>
          </div>
        </div>
        <div class="container">
                <table id="moviesTable" class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Cover</th>
                      <th>Title</th>
                      <th>Genre</th>
                      <th>Rating (Votes)</th>
                      <th>File info</th>
                      <th>Date</th>
                      <th>Links</th>
                    </tr>
                  </thead>
                  <tbody>
                    <!--(for i,movie in enumerate(movies))-->
                        <tr>
                            <td>@!i+1!@</td>
                            <td class="movieCoverCell">
                                <div class="movieCoverPic">
                                    <!--(if len(movie["cover"]) > 0)-->
                                        <img alt="@!movie["title"]!@" src="./covers/@!movie["imdb"]!@.jpg"/>
                                    <!--(end)-->
                                </div>
                            </td>
                            <td>
                                <div class="movieTitle">@!movie["title"]!@</div>
                                <div class="movieCountries">
                                    <!--(for country in movie["countries"])-->
                                        <img alt="@!country["name"]!@" src="./ressources/img/flags/@!country["isoCode"].lower()!@.png"/>
                                    <!--(end)-->
                                    <!--(if movie["srtPath"])-->
                                        <span class="badge badge-inverse">srt</span>
                                    <!--(end)-->
                                </div>
                                <div class="download">
                                    <div class="btn-group">
                                        <a class="btn btn-mini btn-info" href="#">
                                            Download
                                        </a>
                                        <a class="btn btn-mini btn-info dropdown-toggle" href="#" data-toggle="dropdown">
                                            <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <!--(if movie["file"])-->
                                            <li>
                                                <a href="#">
                                                    <i class="icon-film"></i>
                                                    Movie
                                                </a>
                                            </li>
                                            <!--(end)-->
                                            <!--(if movie["srtPath"])-->
                                            <li>
                                                <a href="#">
                                                    <i class="icon-align-center"></i>
                                                    Subtitles
                                                </a>
                                            </li>
                                            <!--(end)-->
                                        </ul>
                                    </div>
                                </div>
                                <div class="movieSummary">@!movie["summary"]!@</div>
                            </td>
                            <td>@!movie["genre"]!@</td>
                            <td>@!movie["rating"]!@ (@!movie["votes"]!@)</td>
                            <td>@!movie["size"]!@MB</td>
                            <td>@!movie["modDate"]!@</td>
                            <td class="movieActions">
                                <a class="btn btn-mini" href="http://www.imdb.com/title/tt@!movie["imdb"]!@" target="_blank">IMDB</a>
                                <a class="btn btn-mini" href="http://www.opensubtitles.org/en/search/sublanguageid-all/imdbid-@!movie["imdb"]!@" target="_blank">ST</a>
                            </td>
                        </tr>
                    <!--(end)-->      
                  </tbody>
                </table>
                <div class="footer">
                    Page generation date : @!gendate!@
                </div>
        </div>
    </body>
</html>